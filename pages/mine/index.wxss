page {
    height: 100%;
}

.page {
    height: 100%;
    background-color: #f1f1f1;
}

.user {
    background-color: #4285f4;
    display: flex;
    /* flex-direction: column; */
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.user-name {
    color: #fff;
    font-size: 32rpx;
}

.usermotto {
    margin-top: 200px;
}

.list {
    background-color: #fff;
}

.list .item {
    display: flex;
    align-items: center;
    padding: 24rpx;
    height: 112rpx;
    border-bottom: 1px solid #eee;
}

.list .item.active {
    background-color: #f1f1f1;
}

.icon {
    margin-right: 16rpx;
}