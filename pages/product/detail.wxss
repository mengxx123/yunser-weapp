page {
    height: 100%;
}
.page-cart {
    height: 100%;
    background-color: #f1f1f1;
}

.detail {

}
.detail .img {
    width: 100%;
    height: 400rpx;
}

.page-footer {
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80rpx;
    background-color: #fff;
    border-top: 1px solid #eee;
}
.page-footer .btn {
    display: flex;
    justify-content: center;
    width: 240rpx;
    align-items: center;
    color: #fff;
    background-color: #f00;
}

.sku-list {
    display: flex;
    flex-wrap: wrap;
}
.sku-list .item {
    padding: 8rpx 16rpx;
    margin-bottom: 24rpx;
    border: 1px solid #f00;
    border-radius: 4rpx;
}